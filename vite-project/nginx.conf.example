# Configuration Nginx pour React Router
# Copiez ce fichier dans votre configuration Nginx
# Généralement dans /etc/nginx/sites-available/gelul.fr

server {
    listen 80;
    listen [::]:80;
    server_name gelul.fr www.gelul.fr;
    
    # Redirection HTTPS (décommentez après avoir configuré SSL)
    # return 301 https://$server_name$request_uri;

    root /var/www/gelul.fr/html;
    index index.html;

    # Logs
    access_log /var/log/nginx/gelul.fr.access.log;
    error_log /var/log/nginx/gelul.fr.error.log;

    # Gestion du routage React - TOUTES les routes pointent vers index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache pour les fichiers statiques (1 an)
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Compression Gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json image/svg+xml;

    # Sécurité - Cacher les fichiers cachés
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

